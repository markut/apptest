
<div class="card text-center">
  <div class="card-header">
    Registro Numero ID: <%= @requerimiento.id%>
  </div>
  <div class="card-body">
    <h5 class="card-title">Asunto: <%= @requerimiento.asunto%></h5>
    <p class="card-text">Mensaje: <%= @requerimiento.notas%></p>

    <div class="row">
    	<div class="col-6 text-right">
		    <p class="card-text">Fecha Creación: <%= @requerimiento.created_at%></p>    	
		    <%= link_to 'Editar', edit_requerimiento_path(@requerimiento), class: 'btn btn-primary'%>
    	</div>
    	<div class="col-6 text-left">
    	<p class="card-text">Fecha Actualización: <%= @requerimiento.updated_at%></p>
		<%= button_to 'Borrar', requerimiento_path(@requerimiento), class: 'btn btn-danger', method: :delete, :onclick => "return confirm('Esta seguro de borrar el registro?')" %>
    	</div>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Volver al índice', requerimientos_path, class: 'text-primary m-5'%>
	<%= link_to 'Nuevo requerimiento', new_requerimiento_path, class: 'text-primary'%>
  </div>
</div>

<div class="mt-5">
	<div class="text-right">
		<%= link_to 'NEW Seguimiento', new_seguimiento_path(id: params[:id]), class: 'btn btn-primary', remote:true %>
		<%# link_to 'NEW Seguimiento TRAD', new_seguimiento_path(id: params[:id]), class: 'btn btn-primary' %>
	</div>
</div>


<div class="row my-3" id="seguimiento-container">
  	<% @requerimiento.seguimiento.each do |seguimiento| %>
  		<%= render '/seguimientos/parcial/cuerpo_seguimiento', seguimiento: seguimiento%>

    <% end %>
</div>


<%=render 'requerimientos/parcial/modal_nuevo_seguimiento'%>
<%=render 'requerimientos/parcial/modal_edit_seguimiento'%>
