
<div class="text-center">

<h1>Indice de Requerimiento</h1>
<div class="text-right"><%= link_to 'Nuevo REQUERIMIENTO', new_requerimiento_path, class: 'btn btn-primary'%></div>

<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Asunto</th>
      <th scope="col">Nota</th>
      <th scope="col">Fecha</th>
    </tr>
  </thead>
  <tbody>
  	<% @requerimiento.each do |requerimiento| %>
    <tr>
      	<th scope="row"><%=link_to requerimiento.id, requerimiento %></th>
		<td> <%= requerimiento.asunto %> </td>
		<td class="col-6"> <%= requerimiento.notas %> </td>
		<td> <%= requerimiento.fecha %> </td>      
    </tr>
    <% end %>
  </tbody>
</table> 
</div>